on:
  push:
    branches-ignore:
      - staging
      - main

jobs:
  test:
    runs-on: ubuntu-18.04
    steps:
    - name: Setup Golang env
      uses: actions/setup-go@v2
      with:
        go-version: '^1.16'

    - name: Checkout
      uses: actions/checkout@v2

    - name: Test
      run: go test -v ./...
